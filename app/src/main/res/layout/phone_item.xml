<android.support.v7.widget.CardView
    android:id="@+id/Phone_Call_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardViewFixedHeight"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    card_view:cardUseCompatPadding="true"
    android:longClickable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:elevation="5sp"
    android:focusable="false"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:focusable="true"
        android:padding="0dp">
        <!--<ImageView-->
        <!--android:id="@+id/simIcon"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_width="40dp"-->
        <!--android:src="@drawable/sim1" />-->
        <TextView
            android:id="@+id/Phone_call_Sim"
            android:layout_width="@dimen/cardViewFixedHeight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="#fcfff9"
            android:textStyle="bold"
            android:textSize="32dp"
            android:background="#defc4727"
            android:textIsSelectable="false" />
        <TextView
            android:id="@+id/Phone_call_Name"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:singleLine="false"
            android:textColor="#b34164c2"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.v7.widget.CardView>

