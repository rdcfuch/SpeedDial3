<android.support.v7.widget.CardView
    android:id="@+id/Phone_Call_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    card_view:cardUseCompatPadding="true"
    android:longClickable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:elevation="5sp"
    android:focusable="false"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Phone Header"
            android:textColor="#feffee"
            android:textStyle="bold"
            android:textSize="26dp"
            android:theme="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
            android:background="#defc4727"
            android:layout_gravity="center_horizontal"
            android:backgroundTintMode="src_atop" />


    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true">
        <ImageView
            android:id="@+id/simIcon"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:src="@drawable/sim1" />

        <TextView
            android:id="@+id/Phone_call_Name"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:singleLine="false"
            android:textColor="#b34164c2"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

